<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="finance_salary_tree" model="ir.ui.view">
        <field name="name">school.finance.salary.tree</field>
        <field name="model">school.finance</field>
         <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Salary List">
                <field name="name"/>
                <field name="student_id"/>
                <field name="transaction_date"/>
                <field name="amount"/>
                <field name="payment_method"/>
            </tree>
        </field>
    </record>

    <record id="finance_salary-form" model="ir.ui.view">
        <field name="name">school.finance.salary.from</field>
        <field name="model">school.finance</field>
        <field name="arch" type="xml">
            <form string="Salary List">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="student_id"/>
                            <field name="transaction_date"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="payment_method"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_Salary" model="ir.actions.act_window">
        <field name="name">Salary and Payroll</field>
        <field name="res_model">school.finance</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
         Command.clear(),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('finance_salary_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('finance_salary-form')})
]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Get your calculations(salary) right
            </p>
        </field>
    </record>

</odoo>