<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="class_section_tree" model="ir.ui.view">
        <field name="name">class.section.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Class with Section">
                <field name="name"/>
                <field name="reg"/>
                <field name="cls"/>
                <field name="cls_schedule" optional="hide"/>
                <field name="section" optional="show"/>
                <field name="sub_ids" optional="show"/>

            </tree>
        </field>
    </record>

    <record id="class_section_form" model="ir.ui.view">
        <field name="name">class.section.from</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Class with Section">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="reg"/>
                            <field name="cls"/>
                        </group>
                        <group>
                            <field name="cls_schedule"/>
                            <field name="section"/>
                            <field name="sub_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address" name="address">
                            <group>
                                <field name="address"/>
                            </group>
                        </page>

                        <page string="Contact Number" name="contact">
                            <group>
                                <field name="phn"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_clsSec" model="ir.actions.act_window">
        <field name="name">Class and Section</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Good Luck
            </p>
        </field>
    </record>

</odoo>